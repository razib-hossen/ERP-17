<odoo>
    <data>

        <!-- Action for Form View -->
        <record id="action_estate_property_tag_form" model="ir.actions.act_window">
            <field name="name">Property Tags</field>
            <field name="res_model">estate.property.tag</field>
            <field name="view_mode">form</field>
        </record>

        <!-- Menu items linking to the actions -->
        <menuitem id="menu_estate_property_tag_form" name="Property Tags" parent="menu_estate_property_settings" action="action_estate_property_tag_form"/>

        <!-- Form View -->
        <record id="view_form_property_tag" model="ir.ui.view">
            <field name="name">estate.property.tag.form</field>
            <field name="model">estate.property.tag</field>
            <field name="arch" type="xml">
                <form string="Test">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
